{% extends 'ParroquiaCertificadoBundle::sacramento_edit.html.twig' %}

{% set nombre_sacramento = 'Matrimonio' %}
{% set path_sacramento = 'matrimonio' %}

{% block personas %}
    {{ form_row(edit_form.hombre) }}
    {{ form_row(edit_form.mujer) }}
{% endblock %}

{% block otros %}
    {{ form_row(edit_form.inscripcion_civil) }}
    {{ form_row(edit_form.fecha_civil) }}
{% endblock %}

{% block collections %}
        <div>
            <label>Padrinos</label>
            <ul class="padrinos" data-prototype="{{ form_widget(edit_form.matrimonios_padrinos.vars.prototype)|e }}">                
                {% for padrino in edit_form.matrimonios_padrinos %}
                    <li>{{ form_row(padrino.padrino) }}</li>
                {% endfor %}
            </ul>
        </div>
    
        <div>
            <label>Celebrantes</label>
            <ul class="celebrantes" data-prototype="{{ form_widget(edit_form.matrimonios_celebrantes.vars.prototype)|e }}">                
                {% for celebrante in edit_form.matrimonios_celebrantes %}
                    <li>{{ form_row(celebrante.celebrante) }}</li>
                {% endfor %}
            </ul>
        </div>    

        <div>
            <label>Catequistas</label>
            <ul class="catequistas" data-prototype="{{ form_widget(edit_form.matrimonios_catequistas.vars.prototype)|e }}">                
                {% for catequista in edit_form.matrimonios_catequistas %}
                    <li>{{ form_row(catequista.catequista) }}</li>
                {% endfor %}
            </ul>
        </div>
    
        <div>
            <label>Testigos</label>
            <ul class="testigos" data-prototype="{{ form_widget(edit_form.matrimonios_testigos.vars.prototype)|e }}">                
                {% for testigo in edit_form.matrimonios_testigos %}
                    <li>{{ form_row(testigo.testigo) }}</li>
                {% endfor %}
            </ul>
        </div>    
{% endblock %}
