{% extends '::base.html.twig' %}

{% set menu_title = 'Certificados' %}

{% block leftsidebar %}
    {{ knp_menu_render(['main','Certificados']) }}
{% endblock %}

{% block body -%}
    <div class="title-wrapper"><h1>{{ nombre_sacramento }}</h1></div>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            {% block personas %}{% endblock %}
            <tr>
                <th>Libro</th>
                <td>{{ entity.libro }}</td>
            </tr>
            <tr>
                <th>Hoja</th>
                <td>{{ entity.hoja }}</td>
            </tr>
            <tr>
                <th>Inscripci√≥n</th>
                <td>{{ entity.inscripcion }}</td>
            </tr>
            <tr>
                <th>Lugar</th>
                <td>{{ entity.lugar }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if entity.fecha %}{{ entity.fecha|date('d-m-Y') }}{% endif %}</td>
            </tr>
            {% block otros %}{% endblock %}            
            {% block collections %}{% endblock %}
            <tr>
                <th>Notas</th>
                <td>{{ entity.notas }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
            <li>
                <a href="{{ path(path_sacramento) }}">
                    Volver a la lista
                </a>
            </li>
            <li>
                <a href="{{ path(path_sacramento ~ '_edit', { 'id': entity.id }) }}">
                    Editar
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>
{% endblock %}
