{% extends 'ParroquiaCertificadoBundle::sacramento_new.html.twig' %}

{% set nombre_sacramento = 'Bautizo' %}
{% set path_sacramento = 'bautizo' %}

{% block collections %}
        <div class="collection">
            <label>Padrinos</label>
            <ul class="padrinos" data-prototype="{{ form_widget(form.bautizos_padrinos.vars.prototype)|e }}">                
                {% for padrino in form.bautizos_padrinos %}
                    <li><div>{{ form_row(padrino.padrino) }}</div></li>
                {% endfor %}
            </ul>
        </div>
    
        <div class="collection">
            <label>Celebrantes</label>
            <ul class="celebrantes" data-prototype="{{ form_widget(form.bautizos_celebrantes.vars.prototype)|e }}">                
                {% for celebrante in form.bautizos_celebrantes %}
                    <li><div>{{ form_row(celebrante.celebrante) }}</div></li>
                {% endfor %}
            </ul>
        </div>    

        <div class="collection">
            <label>Catequistas</label>
            <ul class="catequistas" data-prototype="{{ form_widget(form.bautizos_catequistas.vars.prototype)|e }}">                
                {% for catequista in form.bautizos_catequistas %}
                    <li><div>{{ form_row(catequista.catequista) }}</div></li>
                {% endfor %}
            </ul>
        </div>
{% endblock %}